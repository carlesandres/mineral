{
  "name": "mineral-app",
  "productName": "Mineral App",
  "version": "0.0.0",
  "description": "Offline Markdown Notebook",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "premake": "echo 'Cleaning...' && rm -rf source && cp -r ../mineral-web/out source",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Carles Andres",
    "email": "carles@16protons.com"
  },
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/publisher-s3": "^7.6.1",
    "electron": "34.0.0"
  },
  "build": {
    "productName": "Mineral",
    "appId": "com.mnral.app",
    "copyright": "Copyright © year - Carles Andrés",
    "mac": {
      "category": "productivity"
    },
    "directories": {
      "output": "out"
    }
  },
  "fileAssociations": [
    {
      "ext": "md",
      "name": "Markdown File",
      "role": "Editor"
    }
  ],
  "peerDependencies": {
    "minimist": "^1.2.8",
    "electron-squirrel-startup": "^1.0.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "electron-serve": "^2.1.1",
    "electron-settings": "^4.0.4"
  }
}
